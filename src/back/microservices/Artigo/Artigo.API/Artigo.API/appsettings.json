    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "MongoDb": "mongodb://localhost:27017/"
  },

  "MongoDb": {
    "DatabaseName": "RBEB"
